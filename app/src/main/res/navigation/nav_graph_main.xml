<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/timelineFragment"
    android:id="@+id/nav_graph_main">
    <fragment
        android:id="@+id/timelineFragment"
        android:name="com.wildhuck.cumchatka.TimelineFragment"
        android:label="TimelineFragment"
        tools:layout="@layout/fragment_timeline">
        <action
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            android:id="@+id/action_timelineFragment_to_eventsFragment"
            app:destination="@id/eventsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.wildhuck.cumchatka.EventsFragment"
        android:label="EventsFragment"
        tools:layout="@layout/fragment_events">
        <action
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            android:id="@+id/action_eventsFragment_to_EventFragment"
            app:destination="@id/eventFragment"/>
    </fragment>
    <fragment
        android:id="@+id/eventFragment"
        android:name="com.wildhuck.cumchatka.EventFragment"
        android:label="EventFragment"
        tools:layout="@layout/fragment_event">
    </fragment>
</navigation>